@model ELMS.WEB.Areas.Email.Models.EmailSchedule.IndexViewModel

@{
    ViewData["Title"] = "Email Schedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <div class="d-flex pull-left">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" id="statusDropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">All Statuses</button>
                        <div class="dropdown-menu" aria-labelledby="statusDropdownMenuButton">
                            <a class="dropdown-item" href="javascript:;">All Statuses</a>
                            <a class="dropdown-item" href="javascript:;">Scheduled</a>
                            <a class="dropdown-item" href="javascript:;">Sent</a>
                            <a class="dropdown-item" href="javascript:;">ManuallySent</a>
                        </div>
                    </div>
                    <div class="ml-1">
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters">
                            <i class="material-icons mr-2">filter_alt</i>Show Filters
                        </button>
                    </div>
                </div>
                <div class="pull-right">
                    <a class="create btn btn-success text-white" data-url="/Email/EmailSchedule/CreateModal">New Email Schedule</a>
                    <div class="btn-group">
                        <a class="btn btn-primary"><i class="text-white fas fa-th-large"></i></a>
                        <a class="btn btn-primary active"><i class="text-white fas fa-bars"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-12 collapse" id="collapseFilters">
                <div class="card my-3">
                    <div class="card-header">
                        HIDDEN FILTERS
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-0">
            <div class="card-header card-header-primary card-header-icon">
                <h4 class="card-title">All Email Templates</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display table datatable responsive hover compact" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="th-description font-weight-normal">Email Template</th>
                                <th class="th-description font-weight-normal">Recipient</th>
                                <th class="th-description font-weight-normal">Status</th>
                                <th class="th-description font-weight-normal">Scheduled For</th>
                                <th class="th-description font-weight-normal">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model.EmailSchedules)
                            {
                                <tr>
                                    <td class="td-name">
                                        <a class="emailTemplateDetails text-primary" data-url="/Email/EmailTemplate/DetailsModal" data-uid="@schedule.EmailTemplateUID" style="cursor: pointer">@schedule.EmailTemplate.Name</a>
                                    </td>
                                    <td class="td-name">@schedule.RecipientEmailAddress</td>
                                    <td class="td-name">@schedule.Status.ToString()</td>
                                    <td class="td-name">@schedule.SendTimestamp</td>
                                    <td class="td-actions">
                                        <a class="editSchedule btn btn-primary text-white" data-url="/Email/EmailSchedule/EditModal" data-uid="@schedule.UID"><i class="fas fa-eye p-1"></i></a>
                                        <a class="btn btn-primary" asp-area="Email" asp-controller="EmailSchedule" asp-action="Send" asp-route-uid="@schedule.UID" data-toggle="tooltip" data-placement="left" title="Force send email"><i class="fas fa-paper-plane p-1"></i></a>
                                        <a class="deleteSchedule btn btn-danger text-white" data-url="/Email/EmailSchedule/DeleteModal" data-uid="@schedule.UID"><i class="fas fa-trash p-1"></i></a>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td class="td-name"><a href="#">Example Template Name</a></td>
                                <td class="td-name">contact.lejohnny@gmail.com</td>
                                <td class="td-name">Scheduled</td>
                                <td class="td-name">@DateTime.Now.AddDays(7)</td>
                                <td class="td-actions">
                                    <a class="editSchedule btn btn-primary text-white" data-url="/Email/EmailSchedule/EditModal"><i class="fas fa-eye p-1"></i></a>
                                    <a class="deleteSchedule btn btn-danger text-white" data-url="/Email/EmailSchedule/DeleteModal"><i class="fas fa-trash p-1"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/email/emailschedule/index.js"></script>
    <script>
        $(document).ready(function () {
            $('#navItemEmails').addClass('active');
            $('#navItemEmailSchedules').addClass('active');
        });
    </script>
}