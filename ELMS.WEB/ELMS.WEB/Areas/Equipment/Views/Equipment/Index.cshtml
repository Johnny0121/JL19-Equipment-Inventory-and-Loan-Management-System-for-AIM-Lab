@model ELMS.WEB.Areas.Equipment.Models.IndexViewModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Equipment Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="card card-stats">
            <div class="card-header card-header-icon card-header-primary">
                <div class="card-icon">
                    <i class="fas fa-warehouse"></i>
                </div>
                <div class="card-category">Equipment In-Stock</div>
                <h2 class="card-title">64</h2>
            </div>
            <div class="card-footer">
                <div class="stats">
                    <a href="#">Add a new equipment</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card card-stats">
            <div class="card-header card-header-icon card-header-primary">
                <div class="card-icon">
                    <i class="fas fa-sign-in-alt"></i>
                </div>
                <div class="card-category">Equipment On-Loan</div>
                <h2 class="card-title">64</h2>
            </div>
            <div class="card-footer">
                <div class="stats">
                    <a href="#">Add a new equipment</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card card-stats">
            <div class="card-header card-header-icon card-header-danger">
                <div class="card-icon">
                    <i class="fas fa-warehouse"></i>
                </div>
                <div class="card-category">Due Loans</div>
                <h2 class="card-title">64</h2>
            </div>
            <div class="card-footer">
                <div class="stats">
                    <a href="#">Add a new equipment</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="row justify-content-between align-items-center col-12">
            <div class="d-flex pull-left">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" id="statusDropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">All Statuses</button>
                    <div class="dropdown-menu" aria-labelledby="statusDropdownMenuButton">
                        <a class="dropdown-item" href="javascript:;">All Statuses</a>
                        <a class="dropdown-item" href="javascript:;">Available</a>
                        <a class="dropdown-item" href="javascript:;">On Loan</a>
                        <a class="dropdown-item" href="javascript:;">Unavailable</a>
                    </div>
                </div>
                <div class="ml-1">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters">
                        <i class="material-icons mr-2">filter_alt</i>Show Filters
                    </button>
                </div>
            </div>
            <div class="pull-right">
                @if ((await AuthorizationService.AuthorizeAsync(User, "CreateEquipmentPolicy")).Succeeded)
                {
                    <a class="create btn btn-success text-white" data-url="/Equipment/Equipment/CreateModal">New Equipment</a>
                }
                <div class="btn-group">
                    <a class="btn btn-primary"><i class="text-white fas fa-th-large"></i></a>
                    <a class="btn btn-primary active"><i class="text-white fas fa-bars"></i></a>
                </div>
            </div>
            <div class="col-12 p-0 collapse" id="collapseFilters">
                <div class="card my-3">
                    <div class="card-header">
                        HIDDEN FILTERS
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-0">
            <div class="card-header card-header-primary card-header-icon">
                <h4 class="card-title">All Equipment</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display table datatable-export responsive hover compact" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="text-center"></th>
                                <th class="th-description font-weight-normal">Name</th>
                                <th class="th-description font-weight-normal">Status</th>
                                <th class="th-description font-weight-normal">Warranty Expiration Date</th>
                                <th class="th-description font-weight-normal">Purchase Price (&pound;)</th>
                                <th class="th-description font-weight-normal">Purchase Date</th>
                                <th class="th-description font-weight-normal">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var equipment in Model.Equipment)
                            {
                                <tr>
                                    <td class="td-name"><input type="checkbox" /></td>
                                    <td class="td-name">@equipment.Name</td>
                                    <td class="td-name">@equipment.Status.ToString()</td>
                                    <td class="td-name">@equipment.WarrantyExpirationDate</td>
                                    <td class="td-name">@equipment.PurchasePrice</td>
                                    <td class="td-name">@equipment.PurchaseDate</td>
                                    <td class="td-actions">
                                        <a class="btn btn-primary" asp-area="Equipment" asp-controller="Equipment" asp-action="DetailsView" asp-route-equipmentUID="@equipment.UID"><i class="fas fa-eye p-1"></i></a>
                                        <a class="deleteEquipment btn btn-danger text-white" data-url="/Equipment/Equipment/DeleteModal" data-uid="@equipment.UID"><i class="fas fa-trash p-1"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/equipment/index.js"></script>
    <script>
        $(document).ready(function () {
            $('#navItemEquipment').addClass('active');
        });
    </script>
    <partial name="Components/_NotificationSnippet" />
}