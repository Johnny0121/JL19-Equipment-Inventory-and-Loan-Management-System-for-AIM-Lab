@model ELMS.WEB.Areas.Loan.Models.AcceptTermsAndConditionsViewModel

@{
    ViewData["Title"] = "Loan Accepted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row bg-dark">
        <div class="m-auto text-white text-center">
            <div class="m-5">
                <h1 class="display-2"><strong>AIM LAB</strong></h1>
                <h2 class="display-4 text-center">@ViewData["Title"]</h2>
                <p>You have accepted and activated the loan. Please look after the equipment.</p>
            </div>
        </div>
    </div>
    <div class="row justify-content-center text-center col-md-8 m-auto pt-4">
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/js/areas/loan/accepttermsandconditions.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/areas/loan/accepttermsandconditions.min.js"></script>
    </environment>
}