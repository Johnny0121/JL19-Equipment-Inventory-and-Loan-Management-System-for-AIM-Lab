@model ELMS.WEB.Areas.Loan.Models.AlreadyAcceptedTermsAndConditionsViewModel

@{
    ViewData["Title"] = "This Loan has already been accepted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row bg-dark">
        <div class="m-auto text-white text-center">
            <div class="m-5">
                <h1 class="display-2"><strong>AIM LAB</strong></h1>
                <h2 class="display-4 text-center">@ViewData["Title"]</h2>
                <p><strong>@Model.Loan.StartTimestamp.ToString("d") to @Model.Loan.ExpiryTimestamp.ToString("d")</strong></p>
            </div>
        </div>
    </div>
    <div class="row justify-content-center text-center">
        <div class="card col-md-5 col-sm-12">
            <div class="card-header pt-4 pb-0">
                <h3 class="card-title">Allocated equipment</h3>
                <hr />
            </div>
            <div class="card-body pt-0">
                <ul class="list-group list-group-flush">
                    @foreach (var equipment in Model.Loan.EquipmentList)
                    {
                        <li class="list-group-item">
                            <div class="d-flex justify-content-center align-items-center">
                                <div class="mx-2">
                                    <i class="far fa-image fa-3x text-gray"></i>
                                </div>
                                <div class="mx-2">
                                    @equipment.Name
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="row justify-content-center text-center col-md-8 m-auto pt-4">
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/loan/accepttermsandconditions.js"></script>
}