@model ELMS.WEB.Areas.Loan.Models.LoanExtension.CreateLoanExtensionViewModel

<div class="modal-content">
    <div class="modal-header d-flex align-content-center">
        <div><h2 class="modal-title text-left font-weight-bold">Add loan extension</h2></div>
        <div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i class="fas fa-times-circle 2x"></i>
            </button>
        </div>
    </div>
    <form id="formCreateExtension" class="formCreateExtension" asp-area="Loan" asp-controller="LoanExtension" asp-action="Create" data-uid="@Model.LoanUID">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="LoanUID" />
        <input type="hidden" asp-for="ExtenderEmail" />
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="PreviousExpiryDate"></label>
                <input type="date" class="form-control datetimepicker" asp-for="PreviousExpiryDate" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NewExpiryDate"></label>
                <input type="date" class="form-control datetimepicker" asp-for="NewExpiryDate" />
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn border border-primary btn-primary mr-2">Create extension</button>
            <button type="submit" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>